                 <div class="d-flex justify-content-center"> <h2 class="text-uppercase font-weight-bolder">Matchday <%=week%></h2></div>

                <label style="color:White; background-color:blue"><%=status%></label> 
                <form method='post' action="<%=action%>">
                    <input type='hidden' value='<%=competitionType%>' name='league'/>
                 <table class="table table-responsive-md table-sm table-center table-borderless mx-auto table-light">
                   <% fixtures.forEach(function(fixture){%>
                      
                    <tr class="table-active text-center text-uppercase font-weight-bold text-black" style="width:100%">
                        <td style='background-color:white'> <label><%=fixture.home%> </label>
                         </td>
                        <td style='background-color:white'>
                             <img src="<%=image%><%=fixture.league%>/<%=fixture.home%>.png" class="rounded-circle club-logo" width="30px" height="40px" />
                        </td>
                        <td style='background-color:white'>
                            <input type='text' size="3" required="true" placeholder="H:A"  title="The score must be in this format [2:1]" class="bg-red bold text-center" id="juvi" name="<%=fixture._id%>" value="<%=fixturesScoresPredicted[fixture._id]%>"
                            />
                              
                         </td>
                        <td style='background-color: white'>
                            
                            <span class="text-uppercase">  <img src="<%=image%><%=fixture.league%>/<%=fixture.away%>.png" width="30px" height="40px" /> </span>
                        </td>
                         <td style='background-color: white'> <label ><%=fixture.away%> </label>
                            
                         </td>
     
                     </tr>
                     <% }); %>
              </table>

              
              
               <div class="d-flex justify-content-center margin-top-3 margin-bottom-5">
