                <img src="assets/images/PremierLeague.jpeg" class="logo-img1 float-right"/>
            </div>
            <div class="col-6 ">
                <img src="assets/images/ChampionsLeague.jpeg" class="logo-img1 float-left"/>
            </div>
        </div>

        <div class="row ">
            <div class="col-sm-12 col-md-4 mx-auto d-block margin-bottom-1">
                <a href="login"><button type="button" class="btn btn-purple btn-block ">LOGIN</button></a>
            </div>            
        </div>
        <div class="row">
            <div class="col-sm-12 col-md-4 mx-auto d-block margin-bottom-1">
                <a href="signup"><button type="button" class="btn btn-purple btn-block ">SIGN UP</button></a>
            </div>
        </div>
        
        <div class="row">
           
            <div class="col- mx-auto text-center ">
                <a href="help" class=""><i class="fa fa-fw fa-question-circle fa-2x"></i><span class=" fa-1x font-weight-bold text-purple">HELP</span></a>
            </div>
            
        </div>


